#!/usr/bin/env python3

import lzma
import sys

import ct
import ct.utils


if __name__ == '__main__':
    input_filename, = sys.argv[1:]
    with ct.utils.smart_open(input_filename, 'rt') as f:
        model, bimap = ct.convert_jug_to_ct(ct.parse_jug_model(f))
    tracker = ct.construct_tracker(model)
    tracker.run(1)

    r = ct.ExactNeighbourRounding(model, tracker)
    r.run()

    lb = tracker.lower_bound()
    ub = r.best_primals.evaluate()

    print('final lb={} ub={} gap={}%'.format(lb,
                                             ub,
                                             100.0 * (ub - lb) / lb))
